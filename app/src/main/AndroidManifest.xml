<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iglin.lab3_database">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewRecordActivity" />
        <activity android:name=".DetailsActivity" />
        <activity
            android:name=".statistics.MostFreqActivity"
            android:label="@string/title_activity_most_freq"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".statistics.MostDurableActivity"
            android:label="@string/title_activity_most_durable"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".statistics.DiagramActivity"
            android:label="@string/title_activity_diagram"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>